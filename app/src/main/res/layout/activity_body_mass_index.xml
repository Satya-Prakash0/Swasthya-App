<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".bodyMassIndex">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="BMI Calculator" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:elevation="20dp"
        android:outlineAmbientShadowColor="@color/black"
        app:srcCompat="@drawable/hearthealth" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Your Age:" />

        <EditText
            android:id="@+id/bmiAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:ems="10"
            android:textSize="19dp"
            android:inputType="textPersonName"
            android:hint="12 year"/>

    </LinearLayout>
    <Spinner
        android:id="@+id/bmigender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:entries="@array/gender"
        android:padding="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Weight :" />

        <EditText
            android:id="@+id/bmiWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textSize="19dp"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            android:hint="60kg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Height :" />

        <EditText
            android:id="@+id/bmiHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textSize="19dp"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            android:hint="12 meter"/>

    </LinearLayout>

    <Button
        android:id="@+id/bmiCheckbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_200"
        android:padding="13dp"
        android:elevation="15dp"
        android:text="Check Your BMI "
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:shadowColor="@color/black"
        app:cornerRadius="40dp"
        />
    <Button
        android:id="@+id/bmiDietBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_700"
        android:padding="13dp"
        android:elevation="15dp"
        android:text="Check your Diet Plan"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:shadowColor="@color/black"
        app:cornerRadius="40dp"
        />


</LinearLayout>