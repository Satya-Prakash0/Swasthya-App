<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#F2E8F4"
    android:background="@color/black"
    tools:context=".consultDoctor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="MAKE AN APPOINTMENT" />

        <EditText
            android:id="@+id/problemdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:hint="Describe your problem in detail"
            android:inputType="textMultiLine"
            />
        <Spinner
            android:id="@+id/departmentSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:entries="@array/department"
            android:padding="10dp"
            />
        <Spinner
            android:id="@+id/availabilitySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:entries="@array/timeframes"
            android:padding="10dp"
            />

        <Spinner
            android:id="@+id/selectSpecialist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:entries="@array/selectSpecialist"
            android:padding="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_appointment"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:backgroundTint="#F4EFEF"
                android:padding="13dp"
                android:paddingLeft="20dp"
                android:text="Make Appointment"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:cornerRadius="5dp" />

<!--            <Button-->
<!--                android:id="@+id/btn_payment"-->
<!--                android:layout_width="90dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginLeft="4dp"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_weight="1"-->
<!--                android:backgroundTint="#3EA1A1"-->
<!--                android:drawableLeft="@drawable/ic_google2"-->
<!--                android:elevation="10dp"-->
<!--                android:padding="13dp"-->
<!--                android:text="Payment"-->
<!--                app:cornerRadius="5dp" />-->

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>